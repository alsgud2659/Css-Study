/* Button */

	input[type="submit"],
	input[type="reset"],
	input[type="button"],
	button,
	.button {
		@include vendor('appearance', 'none');
		@include vendor('transition', (
			'background-color #{_duration(transition)} ease-in-out',
			'box-shadow #{_duration(transition)} ease-in-out',
			'color #{_duration(transition)} ease-in-out'
		));
		border-radius: _size(border-radius);
		border: 0;
		cursor: pointer;
		display: inline-block;
		font-weight: _font(weight-bold);
		height: _size(element-height);
		line-height: _size(element-height);
		padding: 0 2.25rem;
		text-align: center;
		text-decoration: none;
		white-space: nowrap;

		&.small {
			font-size: 0.8rem;
			height: _size(element-height) * 0.75;
			line-height: _size(element-height) * 0.75;
			padding: 0 1.5rem;
		}

		&.large {
			font-size: 1.35rem;
			height: _size(element-height) * 1.25;
			line-height: _size(element-height) * 1.25;
			padding: 0 3rem;
		}

		&.wide {
			min-width: 13rem;
		}

		&.icon {
			&:before {
				font-size: 0.9rem;
				margin-right: 0.5rem;
			}
		}

		&.fit {
			width: 100%;
		}

		&.disabled,
		&:disabled {
			@include vendor('pointer-events', 'none');
			opacity: 0.25;
		}
	}

	@mixin color-button($p: null) {
		input[type="submit"],
		input[type="reset"],
		input[type="button"],
		button,
		.button {
			background-color: transparent;
			box-shadow: inset 0 0 0 1px _palette(accent1);
			color: _palette(accent1) !important;

			&:hover {
				background-color: transparentize(_palette(accent1), 0.9);

				&:active {
					background-color: transparentize(_palette(accent1), 0.75);
				}
			}

			&.primary {
				background: _palette(accent1);
				box-shadow: none;
				color: _palette(bg) !important;

				&:hover {
					background-color: transparentize(_palette(accent1), 0.5);

					&:active {
						background-color: transparentize(_palette(accent1), 0.25);
					}
				}
			}
		}
	}

	@include color-button;